{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "array-type": false,
    "ban-types": false,
    "import-blacklist": [
      true,
      "lodash",
      "ngx-bootstrap"
    ],
    "indent": [
      true,
      "tabs",
      4
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "interface-over-type-literal": false,
    "max-classes-per-file": false,
    "max-line-length": false,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "no-empty": false,
    "no-string-literal": false,
    "object-literal-key-quotes": false,
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "prefer-const": false,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": false,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  }
}
